# ============================================
# Telegram Bot Configuration
# ============================================
# Токен Telegram бота (получить у @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ============================================
# Yandex Music Configuration
# ============================================
# Токен Яндекс.Музыки
# Инструкция: https://yandex-music.readthedocs.io/en/main/token.html
YANDEX_TOKEN=your_yandex_music_token_here

# ============================================
# Database Configuration
# ============================================
# Тип базы данных: sqlite или postgresql
# По умолчанию: sqlite (для локальной разработки)
DB_TYPE=sqlite

# ============================================
# SQLite Configuration (используется если DB_TYPE=sqlite)
# ============================================
# Путь к файлу базы данных SQLite
# По умолчанию: bot.db
DB_FILE=bot.db

# ============================================
# PostgreSQL Configuration (используется если DB_TYPE=postgresql)
# ============================================
# Хост PostgreSQL сервера
DB_HOST=localhost

# Порт PostgreSQL сервера
DB_PORT=5432

# Имя базы данных
DB_NAME=yandex_music_bot

# Пользователь PostgreSQL
DB_USER=postgres

# Пароль PostgreSQL (ОБЯЗАТЕЛЬНО для PostgreSQL!)
DB_PASSWORD=your_postgres_password_here

# ============================================
# Docker Compose Configuration (опционально)
# ============================================
# Эти переменные используются только при запуске через docker-compose
# Если не указаны, используются значения по умолчанию

# Пользователь PostgreSQL для Docker контейнера
POSTGRES_USER=postgres

# Пароль PostgreSQL для Docker контейнера
# ⚠️ ВАЖНО: Измените на безопасный пароль в продакшене!
POSTGRES_PASSWORD=postgres

# Имя базы данных для Docker контейнера
POSTGRES_DB=yandex_music_bot

# Email для входа в pgAdmin (веб-интерфейс для PostgreSQL)
PGADMIN_DEFAULT_EMAIL=admin@admin.com

# Пароль для входа в pgAdmin
# ⚠️ ВАЖНО: Измените на безопасный пароль в продакшене!
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================
# Примеры конфигурации
# ============================================
#
# Для локальной разработки с SQLite:
# DB_TYPE=sqlite
# DB_FILE=bot.db
#
# Для локальной разработки с PostgreSQL:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=yandex_music_bot
# DB_USER=postgres
# DB_PASSWORD=your_password
#
# Для продакшена с PostgreSQL:
# DB_TYPE=postgresql
# DB_HOST=your_postgres_host
# DB_PORT=5432
# DB_NAME=yandex_music_bot
# DB_USER=your_secure_user
# DB_PASSWORD=your_secure_password
#
